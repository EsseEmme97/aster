RewriteEngine On
#RewriteCond %{HTTPS} off [OR]
#RewriteCond %{HTTP_HOST} ^www\. [NC]
#RewriteCond %{HTTP_HOST} ^(?:www\.)?(.+)$ [NC]
#RewriteRule ^ https://%1%{REQUEST_URI} [L,NE,R=301]

RewriteRule  ^it$ index.php [L]
RewriteRule ^azienda$ it/azienda.php [L]
RewriteRule ^aster-elettronica$ it/aster.php [L]
RewriteRule ^produzione-e-assemblaggio$ it/produzione.php [L]
RewriteRule ^news$ it/news.php [L]
RewriteRule ^news/([0-9]+)$ it/news-dettaglio.php [L]
RewriteRule ^lavora-con-noi$ it/lavora-con-noi.php [L]
RewriteRule ^contatti$ it/contatti.php [L]
RewriteRule ^ricerca-e-sviluppo$ it/sviluppo.php [L]
RewriteRule ^settori$ it/settori.php [L]
RewriteRule ^servizi$ it/servizi.php [L]


RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ /it/404.html [L]